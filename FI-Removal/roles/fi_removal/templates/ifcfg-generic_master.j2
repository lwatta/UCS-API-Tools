# Generated by ansible
DEVICE="{{ item }}"
NAME="{{ item }}"
ONBOOT=yes
BOOTPROTO=none
TYPE=Ethernet
USERCTL=no
NM_CONTROLLED=no
IPADDR={{ interfaces[item]['ip_address'] }}
NETMASK={{ interfaces[item]['netmask'] }}
{% if 'gateway' in interfaces[item].keys() -%}
GATEWAY={{ interfaces[item]['gateway'] }}
{% endif -%}
DOMAIN={{ domain_name }}
{% if nameservers and nameservers is defined -%}
{% if nameservers is string -%}
DNS1={{ nameservers }}
{% else -%}
{% for value in nameservers -%}
DNS{{ loop.index }}={{ value }}
{% endfor -%}
{% endif -%}
{% endif -%}
{% if 'options' in interfaces[item].keys() -%}
BONDING_OPTS="{{ interfaces[item]['options'] }}"
{%- endif -%}
